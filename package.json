{
  "name": "job-tracker-extension",
  "private": true,
  "version": "1.2.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "version": "sync-version public/manifest.json",
    "clean:release": "rm -f release/job-tracker-extension.zip release/job-tracker-extension.crx || del release\\job-tracker-extension.*",
    "zip": "zip release/job-tracker-extension.zip dist/*",
    "crx": "npx crx pack dist -o release/job-tracker-extension.crx -p my-private-key.pem",
    "package": "npm run clean:release && npm run zip && npm run crx",
    "release": "semantic-release"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.4",
    "@tailwindcss/vite": "^4.1.5",
    "classnames": "^2.5.1",
    "framer-motion": "^12.10.1",
    "lucide-react": "^0.508.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zustand": "^5.0.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.2",
    "@types/chrome": "^0.0.318",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "cross-zip": "^3.1.0",
    "crx": "^5.0.1",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "postcss": "^8.5.3",
    "semantic-release": "^24.2.3",
    "semantic-release-chrome": "^3.2.0",
    "sync-version": "^1.0.1",
    "tailwindcss": "^4.1.5",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.3.1",
    "zip-cli": "^0.0.0"
  }
}
